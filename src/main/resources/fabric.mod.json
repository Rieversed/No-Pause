{
	"schemaVersion": 1,
	"id": "nopause",
	"version": "${version}",
	"name": "NoPause",
	"description": "Prevents the pause menu from opening when tabbing out or clicking out of Minecraft",
	"authors": [
		"Rieversed"
	],
	"contact": {
		"sources": "https://github.com/yourusername/nopause"
	},
	"license": "Apache-2.0",
	"icon": "assets/nopause/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"com.lambda.nopause.NoPause"
		],
		"client": [
			"com.lambda.nopause.NoPauseClient"
		]
	},
	"mixins": [
		"nopause.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	}
}